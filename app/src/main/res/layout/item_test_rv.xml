<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/name_dp200"
        android:layout_marginStart="@dimen/name_dp15"
        android:layout_marginEnd="@dimen/name_dp15"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_pl" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/name_dp15"
        android:layout_marginTop="@dimen/name_dp5"
        android:layout_marginEnd="@dimen/name_dp15"
        android:gravity="center"
        android:textColor="@color/colorCE9FFC"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toBottomOf="@id/iv_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>