<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingVertical="@dimen/name_dp5">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_main_navigation_icon"
        android:layout_width="@dimen/name_dp22"
        android:layout_height="@dimen/name_dp22"
        tools:srcCompat="@drawable/main_home_selector" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_main_navigation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/name_dp2"
        android:textColor="@color/main_color_selector"
        android:textSize="@dimen/sp_12"
        tools:text="首页"
        tools:textColor="@color/colorA4A4A4" />
</LinearLayout>