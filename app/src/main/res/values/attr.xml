<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义评分控件 -->
    <declare-styleable name="SimpleRatingBar">
        <!-- 当前星等级 -->
        <attr name="grade" format="float"/>
        <!-- 星星总数量 -->
        <attr name="gradeCount" format="integer"/>
        <!-- 星星的宽度 -->
        <attr name="gradeWidth" format="dimension" />
        <!-- 星星的高度 -->
        <attr name="gradeHeight" format="dimension" />
        <!-- 星星之间的间隔 -->
        <attr name="gradeSpace" format="dimension"/>
        <!-- 星星选择跨度 -->
        <attr name="gradeStep" format="enum" >
            <!-- 半颗星 -->
            <enum name="half" value="0x00" />
            <!-- 一颗星 -->
            <enum name="one" value="0x01" />
        </attr>
        <!-- 默认的星星图标 -->
        <attr name="normalDrawable" format="reference"/>
        <!-- 半颗的星星图标 -->
        <attr name="halfDrawable" format="reference"/>
        <!-- 选中的星星图标 -->
        <attr name="fillDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="HighLightTextView">
        <attr name="heightLightColor" format="color" />
        <attr name="heightLightText" format="string" />
    </declare-styleable>

    <declare-styleable name="Search_View">
        <attr name="textSizeSearch" format="dimension"  />
        <attr name="textColorSearch" format="color" />
        <attr name="textHintSearch" format="string" />
        <attr name="searchBlockHeight" format="integer" />
        <attr name="searchBlockColor" format="color" />
    </declare-styleable>

    <declare-styleable name="FeedGridView">
        <attr name="hSpacing" format="dimension" />
        <attr name="vSpacing" format="dimension" />
        <attr name="pSpacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AnimatedTabLayout">
        <attr name="atl_tabs" format="reference" />
    </declare-styleable>

</resources>